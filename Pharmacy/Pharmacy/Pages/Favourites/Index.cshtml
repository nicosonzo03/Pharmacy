@page
@model Pharmacy.Pages.Favourites.IndexModel
@{
    ViewData["Title"] = "Favourites";
}
@if (Model.User != null)
{
    <script>
    function setFavorite(pId) {
        var el = document.getElementById('m_' + pId);
        if (el.classList.contains("bi-heart-fill")) {
                fetch('/Favourites/Index?handler=DeleteFavorite&userId=@Model.User.Id&diseaseId=' + pId)
                .then(r => {
                        el.classList.add("bi-heart");
                        el.classList.remove("bi-heart-fill");
                });
        } else {
            fetch('/Favourites/Index?handler=SetFavorite&userId=@Model.User.Id&diseaseId=' + pId)
                .then(r => {
                        el.classList.add("bi-heart-fill");
                        el.classList.remove("bi-heart");
                });
    }
    }
    </script>
}

@if (Model.User == null)
{
    <div class="text-center">
        <h1 class="display-4,text">@ViewData["Title"]</h1>
    </div>
    <div class="text-center mt-5">
        <p>You are not logged in! <a asp-page="/users/register">Register</a> or <a asp-page="/users/login">Log in</a></p>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4,text">@ViewData["Title"] - @Model.User.Username</h1>
    </div>
    @if (!Model.User.IsVerified)
    {
        <div class="text-center mt-5">
            <p>You are not verified! <a asp-page="/users/register">Register another account</a> or <a asp-page="/users/login">Log into another account</a></p>
        </div>
    }
    else
    {
        <form method="post">
            <div class="container mt-5">
                @if (Model.Diseases != null)
                {
                    @foreach (var disease in Model.Diseases)
                    {
                        <div class="row mt-5 rounded shadow">
                            <div class="col-sm-1">
                            </div>
                            <div class="col-sm">
                                <div class="row">
                                    <div class="col">
                                        <h3 class="display-4,text">@disease.Name</h3>
                                    </div>
                                    <div class="col text-right mt-2 mr-3">
                                        <span class="float-right">
                                            <a href="javascript: setFavorite('@disease.Id')">
                                                <i id="m_@disease.Id" class="bi bi-heart-fill" style="font-size: 2.3em; "></i>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col">
                                        <h3>@disease.Description</h3>
                                    </div>
                                    <div class="col text-right mb-5 mr-3">
                                        <a class="btn btn-outline-primary float-right" href="" target="_blank"><i class="bi bi-cart3"></i> Vedi medicinali</a> <!--link alla pagina details-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </form>
    }
}